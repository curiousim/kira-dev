---
import Block from "../components/common/Block.astro";
---

<body class="grid--landing-page">
	<Block />
	<menu class="sidebar">
		<Block>Kira_Menshov</Block>
		<Block />
	</menu>
	<style>
		.grid--landing-page {
			display: grid;
			grid-template-columns: 2fr 1fr;
			grid-template-rows: 1fr;
			grid-column-gap: 20px;
			grid-row-gap: 20px;
			padding: 20px;
			width: 100vw;
			height: 100vh;
		}
		.sidebar {
			display: grid;
			grid-template-columns: 1fr;
			grid-template-rows: 1fr 3fr;
			grid-row-gap: 20px;
			padding: 0px;
			margin: 0px;
		}
	</style>
</body>
