---
import LinkButton from "../common/LinkButton.astro";

interface Props {
	post: {
		id: string;
		data: {
			title: string;
			description: string;
			pubDate: Date;
		};
	};
}
const { post } = Astro.props;
---

<div class="blog-card">
	<div class="blog-card-content">
		<span class="blog-date">
			{post.data.pubDate.toLocaleDateString()}
		</span>
		<h2>{post.data.title}</h2>
		<p class="blog-desc">{post.data.description}</p>
	</div>
	<div class="blog-card-action">
		<LinkButton text="READ" href={`/blog/${post.id}`} variant="outline" />
	</div>
</div>

<style>
	.blog-card {
		position: relative;
		background: var(--block-card-background);
		border-radius: var(--radii-10);
		padding: 1rem;
		box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.06);
		display: flex;
		justify-content: space-between;
		width: 100%;
		height: 160px;
	}
	.blog-card-content {
		display: flex;
		flex-direction: column;

		height: 100%;
		flex: 3;
	}
	.blog-card-action {
		display: flex;
		align-items: flex-end;
		justify-content: center;
		flex: 1;

		> button:hover {
			background-color: var(--button-blog-card-background-hover);
			border-color: var(--button-blog-card-background-hover);
			color: #fff;
		}
	}
	.blog-date {
		color: #b0b0b0;
		font-size: 14px;
		letter-spacing: 0.04em;
		padding-bottom: 10px;
	}
	.blog-desc {
		color: var(--text-main);
		font-size: 1.1rem;
		margin: 0 0 0.5rem 0;
		max-lines: 2;
	}
	.blog-read-btn {
		align-self: flex-end;
		display: inline-flex;
		align-items: center;
		gap: 0.5em;
		font-family: var(--ff-heading);
		font-size: 1.1rem;
		font-weight: 700;
		color: var(--text-high-contrast);
		background: var(--blog-btn-bg, transparent);
		border: 2px solid var(--text-high-contrast);
		border-radius: 0.5em;
		padding: 0.4em 1.5em;
		text-decoration: none;
		transition: background 0.2s, color 0.2s, border-color 0.2s;
	}
	.blog-read-btn:hover {
		background: var(--accent);
		color: #fff;
		border-color: var(--accent);
	}
	.arrow {
		font-size: 1.2em;
	}
	@media (max-width: 900px) {
		.blog-card {
			padding: 1.2rem 1rem 1.2rem 1rem;
		}
		.blog-title {
			font-size: 1.2rem;
		}
	}
</style>
