---
import BaseHead from "../components/BaseHead.astro";
import MainLayout from "../layouts/MainLayout.astro";
import InfoCardMainPage from "../components/InfoCardContent/MainPage.astro";
import Block from "../components/common/Block.astro";
import LinkButton from "../components/common/LinkButton.astro";
import ThemeSwitcher from "../components/ThemeSwitcher/ThemeSwitcher.astro";
---

<BaseHead
	title="Kira Menshov – Software Engineer"
	description="Personal site of Kira Menshov, frontend developer."
/>

<MainLayout>
	<Block slot="main">
		<div class="main-content">
			<span class="main-title">
				<h1>Kira</h1>
				<h1>Software_Engineer</h1>
				<h1>•Tel-Aviv</h1>
			</span>
			<div class="intro">
				<p>
					I am a software engineer with a passion for building
					products that make a difference. I have experience in
					full-stack development, with a focus on front-end
					technologies. I am currently working at a startup in Tel
					Aviv, where I am responsible for building and maintaining
					the company's web application.
				</p>
				<p>
					I am always looking for new opportunities to learn and grow
					as a developer. I am excited to work on projects that
					challenge me and allow me to use my skills to create
					something meaningful.
				</p>
				<p>
					In my free time, I enjoy reading, hiking, and spending time
					with my family. I am also an avid traveler and love
					exploring new places and cultures.
				</p>
			</div>
			<div class="buttons-container">
				<LinkButton text="Blog -->" href="/blog" variant="outline" />
				<LinkButton
					text="Github -->"
					href="https://github.com/kira"
					variant="outline"
				/>
				<LinkButton
					text="LinkedIn -->"
					href="https://linkedin.com/in/kira"
					variant="outline"
				/>
			</div>
		</div>
	</Block>
	<div slot="theme">
		<ThemeSwitcher />
	</div>
	<InfoCardMainPage slot="latest" />
</MainLayout>
<style>
	.main-content {
		display: flex;
		flex-direction: column;
		height: 100%;
	}
	.main-title {
		display: flex;
		flex-direction: column;
	}
	.intro {
		margin-top: 2rem;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		color: var(--text-main);
		font-size: 1.15rem;
		line-height: 1.7;
	}
	.buttons-container {
		display: flex;
		gap: 1.5rem;
		margin-top: auto;
	}
	.blog-banner {
		height: 100%;
		width: 100%;
		display: grid;
		grid-template-columns: 1fr;
		grid-template-rows: 1fr 10fr 1fr;
	}
	.blog-latest-post {
		width: 80%;
		display: flex;
		justify-content: end;
		flex-direction: column;
		gap: 0.5rem;
		padding-block: 3rem;
	}
	.sidebar-title {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	@media (max-width: 900px) {
		.main-title {
			font-size: 1.5rem;
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}
		.intro {
			font-size: 1rem;
		}
	}
</style>
