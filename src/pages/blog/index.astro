---
import BaseHead from "../../components/BaseHead.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import Block from "../../components/common/Block.astro";
import ThemeSwitcher from "../../components/ThemeSwitcher/ThemeSwitcher.astro";
import BlogRoll from "../../components/BlogRoll.astro";
---

<BaseHead
	title="Blog – Kira Menshov"
	description="Blog posts by Kira Menshov, frontend developer."
/>

<MainLayout>
	<div slot="main">
		<BlogRoll />
	</div>
	<div slot="sidebar">
		<ThemeSwitcher />
		<Block backgroundColor="secondary">
			<h2 class="sidebar-title">About</h2>
			<p>Kira_Menshov<br />Software_engineer<br />• Tel-Aviv</p>
			<p>
				Lorem Ipsum is simply dummy text of the printing and typesetting
				industry. Lorem Ipsum has been the industry's standard dummy
				text
			</p>
			<a class="blog-read-btn" href="/about"
				>ABOUT <span class="arrow">→</span>
			</a>
		</Block>
	</div>
</MainLayout>
<style>
	.sidebar-title {
		font-size: 1.3rem;
		color: var(--text-high-contrast);
		margin-bottom: 1rem;
	}
	.blog-read-btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5em;
		font-family: var(--ff-heading);
		font-size: 1.1rem;
		font-weight: 700;
		color: var(--text-high-contrast);
		background: var(--blog-btn-bg, transparent);
		border: 2px solid var(--text-high-contrast);
		border-radius: 0.5em;
		padding: 0.4em 1.5em;
		text-decoration: none;
		transition: background 0.2s, color 0.2s, border-color 0.2s;
		margin-top: 1.5rem;
	}
	.blog-read-btn:hover {
		background: var(--accent);
		color: #fff;
		border-color: var(--accent);
	}
	.arrow {
		font-size: 1.2em;
	}
</style>
